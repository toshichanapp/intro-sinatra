<html>
<head>
  <meta charset="UTF-8">
</head>
<body>
  <div>
    <% unless @errors.nil? %>
      <% @errors.each do |error| %>
        <%= error %>
      <% end %>
    <% end %>
  </div>
  <form action="/users/confirm" method="POST">
    <h1>新規登録</h1>
    <div>
      お名前<input type="text" name="name">
    </div>
    <div>
      メールアドレス<input type="text" name="email">
    </div>
    <div>
      パスワード<input type="text" name="password">
    </div>
    <div>
      <input type="submit">
    </div>
  </form>
</body>
</html>